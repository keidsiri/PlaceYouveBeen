@using PlaceYouveBeen.Models;

<h1>Places you have been</h1>

@if (Model.Count == 0)
{
  <p>There are no places on the list yet!</p>
}
<ul>
  @foreach (Place place in Model)
  {
    <li>@place.CityName</li>
  }
</ul>
<a href="/places/new">Add a new place here.</a>
<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All Items</button>
</form>